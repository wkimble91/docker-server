/* *** CUSTOM *** */
/*Style backdrop*/
.backdropImage {filter: blur(18px) saturate(120%) contrast(120%) brightness(40%);}

/*Accent and rounding*/
:root {--accent: 98, 121, 205;}
:root {--rounding: 12px;}

/* Hide "manual" and "forgot" buttons */
#loginPage .raised.cancel.block.btnManual.emby-button {display: none}
#loginPage .raised.cancel.block.btnForgotPassword.emby-button {display: none}

/* Adds some margin on the item page */
.selectContainer {margin-right: 1em !important;}

/* Size episode preview images to match thumbnail ratio*/
.listItemImage.listItemImage-large.itemAction.lazy {width: 19.56vw !important; height: 11vw !important;}

/* Hide Overview in season view */
.secondary.listItem-overview.listItemBodyText {display: none;}

/*Hide crap*/
.headerCastButton { display: none; }
.headerSyncButton { display: none; }
.guideChannelNumber { display: none; }
#similarCollapsible { display: none; }
div.starRatingContainer { display: none; }

/* Hides "Latest Youtube" */
#homeTab > div > div.section2 > div:nth-child(3) {display: none;}

/* Hides "Next Up" */
#homeTab > div > div.section3 {display: none;}

/* Full titles */
.cardText { white-space: normal; }

/* Hide scroll buttons for "My Media" on home screen */
/*.section0 .emby-scrollbuttons  {display: none;}*/

/* Makes season image scroll with page */
.detailImageContainer .portraitCard { position: fixed !important; top: 12% !important; }

/* Background color */
.backgroundContainer {background-color: #191919;}

.playedIndicator {background-color: rgba(0,0,0,.6);}

.itemProgressBarForeground{background-color: rgba(98,121,205,.7);}
